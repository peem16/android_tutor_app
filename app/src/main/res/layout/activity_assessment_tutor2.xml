        android:layout_width="478dp"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/boxregis"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/txtLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtAssessment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ประเมินนักเรียน"
                android:textColor="#ef67a7"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtLine2"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="1.ความถูกต้องในการทำแบบทดสอบ"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/rd1"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <RadioButton
                    android:id="@+id/rba1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="ถูกต้องร้อยละ 100 ของคะแนนเต็ม"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rba1_2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="ถูกต้องร้อยละ 80 ของคะแนนเต็ม" />

                <RadioButton
                    android:id="@+id/rba1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
