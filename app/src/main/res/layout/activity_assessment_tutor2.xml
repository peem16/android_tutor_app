                <RadioButton
                    android:id="@+id/rba1_4"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="ถูกต้องร้อยละ 40 ของคะแนนเต็ม" />

                <RadioButton
                    android:id="@+id/rba1_5"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="ถูกต้องต่ำกว่าร้อยละ 20 ของคะแนนเต็ม" />
            </RadioGroup>

            <TextView
                android:id="@+id/txtLine3"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="2.ความรู้ด้านเนื้อหาในวิชาที่เรียน"
                android:textColor="#000000" />

            <RadioGroup
                android:id="@+id/rd1"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <RadioButton
                    android:id="@+id/rba2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="ถูกต้องร้อยละ 100 ของคะแนนเต็ม" />

                <RadioButton
                    android:id="@+id/rba2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="ถูกต้องร้อยละ 80 ของคะแนนเต็ม" />

                <RadioButton
                    android:id="@+id/rba2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="ถูกต้องร้อยละ 60 ของคะแนนเต็ม" />

                <RadioButton
                    android:id="@+id/rba2_4"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="ถูกต้องร้อยละ 40 ของคะแนนเต็ม" />

