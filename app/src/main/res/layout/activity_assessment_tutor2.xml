                <RadioButton
                    android:id="@+id/rba5_2"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:text="ระดับความรู้อยู่ในระดับร้อยละ80 ของเกณฑ์" />

                <RadioButton
                    android:id="@+id/rba5_3"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:text="ระดับความรู้อยู่ในระดับร้อยละ 60 ของเกณฑ์" />

                <RadioButton
                    android:id="@+id/rba5_4"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:text="ระดับความรู้อยู่ในระดับร้อยละ 40 ของเกณฑ์" />

                <RadioButton
                    android:id="@+id/rba5_5"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:text="ระดับความรู้อยู่ในระดับต่ำกว่าร้อยละ 20 ของเกณฑ์" />
            </RadioGroup>

            <TextView
