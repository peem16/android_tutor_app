<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/dash_border"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgCourse"
        android:layout_width="80dp"
        android:layout_height="175dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_paper" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView47"
                android:layout_width="221dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/txtCourse"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="วิชา :"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtNameCourse"
                android:layout_width="368dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="ชื่อคอร์ส"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView48"
                android:layout_width="221dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtCourseDetail"
                android:layout_width="399dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/li1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/btnBuy"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/imgCourse"
                android:layout_toEndOf="@+id/txtNameCourse"
                android:layout_weight="1"
                android:background="@drawable/custom_button_round_rect_border"
                android:gravity="center_vertical|center_horizontal"
                android:text="ซื้อ"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/btnReserve"
                android:layout_width="40dp"
                android:layout_height="30dp"

                android:layout_toEndOf="@+id/txtNameCourse"
                android:layout_weight="1"
                android:background="@drawable/custom_button_round_rect_border"
                android:gravity="center_vertical|center_horizontal"
                android:text="จอง"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btnass"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/txtCourse"
                android:layout_alignTop="@+id/btnReserve"
                android:layout_weight="1"
                android:background="@drawable/custom_button_round_rect_border"
                android:gravity="center_vertical|center_horizontal"
                android:text="ผลทดสอบ"
                android:textColor="#ffffff"

                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView35"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/btnpay"
                android:layout_width="257dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="96dp"

                android:layout_weight="1"
                android:background="@drawable/custom_button_round_rect_border"
                android:gravity="center_vertical|center_horizontal"
                android:text="กรุณายืนยันการชำระ"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="390dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/btnReserve"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="76dp"

            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="รอการตรวจสอบการชำระ"
            android:textColor="#FF8B8B"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_horizontal"
            android:text="รหัสเรียน"
            android:textColor="#FF8B8B"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>