<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogin">

    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:background="@drawable/boxregis"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editText"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="date"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/editText2"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="time"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_round_rect_border"
            android:text="วันที่เรียน"
            android:textColor="#000000"
            android:onClick="showDatePickerDialog1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:onClick="showTimePickerDialog1"
            android:background="@drawable/custom_button_round_rect_border"
            android:text="เวลาที่เรียน"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="172dp"
        android:background="@drawable/boxregis"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="84dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/textView7"
                android:layout_toStartOf="@+id/textView7"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="วันที่เริ่ม-วันที่สิ้นสุด :"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/txtTime"
                android:layout_toEndOf="@+id/txtTime"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="วันเริ่ม-วันสิ้นสุด"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="81dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="เวลาเริ่ม-เวลาสิ้นสุด :"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="เวลาเริ่ม-สิ้นสุด"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnKey"
                android:layout_width="62dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#ffecec"
                app:srcCompat="@drawable/ic_btn_keygroup" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_round_rect_border"
                android:text="เลือกคอร์สเรียนที่มีอยู่"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_round_rect_border"
                android:text="ตรวจสอบการลงคอร์สเรียน"
                android:textColor="#000000"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:background="@drawable/custom_button_round_rect_border"
        android:enabled="false"
        android:text="ยืนยันการซื้อ"
        android:textColor="#000000"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="รายละเอียดซื้อคอร์สเรียน"
        android:textColor="#ef67a7"
        android:textSize="18sp" />
</RelativeLayout>