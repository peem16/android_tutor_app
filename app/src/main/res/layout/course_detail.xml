<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/coursename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ชื่อคอร์สเรียน"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtRoom"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="ห้อง :"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/room"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="เลขห้อง"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="86dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="วันที่เริ่ม-วันที่สิ้นสุด :"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/End_date"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="วันเริ่ม-วันสิ้นสุด"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtView6"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="เวลาเริ่ม-เวลาสิ้นสุด :"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/End_time"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="เวลาเริ่ม-สิ้นสุด"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_round_rect_border"
                android:text="เช็คชื่อนักเรียน"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button15"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_round_rect_border"
                android:text="บันทึกเข้า"
                android:textColor="#000000"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNameTutor"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="ผู้สอน :"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/firstname"
                android:layout_width="97dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="ชื่อ"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/lastname"
                android:layout_width="124dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="นามสกุล"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_round_rect_border"
                android:text="ลาสอน"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@drawable/custom_button_round_rect_border"
                android:text="ลาเรียน"
                android:textColor="#000000"
                android:textSize="12sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@drawable/custom_button_round_rect_border"
                android:text="ประเมินครูผู้สอน"
                android:textColor="#000000"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/checkstu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:background="@drawable/ic_test"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:textColor="#000"
                android:visibility="gone" />

            <Button
                android:id="@+id/button18"
                android:layout_width="98dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:background="@drawable/custom_button_round_rect_border"
                android:text="ลาล่วงหน้า"
                android:textSize="12sp"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/boxregis"
        android:orientation="vertical">
        <TextView
            android:id="@+id/emptyList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="วันนี้ไม่มีเรียน"
            android:textSize="25sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/emptyList7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="วันนี้งดสอน"
            android:textSize="25sp"
            android:visibility="gone" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar7"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp" />

</RelativeLayout>