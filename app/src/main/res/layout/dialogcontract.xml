<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:background="@drawable/colorww"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="131dp"
        android:textColor="#ff0000"
        android:textSize="16dp"
        android:text="x" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnpurc"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignBaseline="@+id/btnmain"
            android:layout_alignBottom="@+id/btnmain"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="61dp"
            android:layout_toStartOf="@+id/showpass"
            android:layout_toLeftOf="@+id/showpass"
            android:layout_weight="1"
            android:background="@drawable/custom_button_round_rect_border"
            android:gravity="center_vertical|center"
            android:text="Purchase contract"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnmain" />

        <TextView
            android:id="@+id/btnmain"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="61dp"
            android:layout_toEndOf="@+id/btnpurc"
            android:layout_toRightOf="@+id/btnpurc"
            android:layout_weight="1"
            android:background="@drawable/custom_button_round_rect_border"
            android:gravity="center_vertical|center"
            android:text="Maintenance contract"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </LinearLayout>

</RelativeLayout>